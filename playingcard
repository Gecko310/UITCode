#include <iostream>
#include <string.h>

using namespace std;
class CdPlayingCard{
    int suite,rank;
public:
    CdPlayingCard(){
        suite=0;
        rank=0;
    }
    CdPlayingCard(int x,int y){
        suite = x;
        rank = y;
    }
    void set(){
        suite = 1;
        rank = 1;
    }
    void print(){
        string n,m;
        if(rank == 1){m="Ace";}
        if(rank == 11){m="Jack";}
        if(rank == 12){m="Queen";}
        if(rank == 13){m="King";}
        cout << m<<" of ";
        if(suite == 1){n="Heart";}
        if(suite == 2){n="Diamond";}
        if(suite == 3){n="Club";}
        if(suite == 4){n="Spade";}
        cout << n << endl;
    }
};
class CDPlayingDesk{
    CdPlayingCard card[52];
    int tong=0;
public:
    CDPlayingDesk(){
        int i=0;
        for (int suite=1;suite<=4;suite++){
            for(int rank =1; rank <=13;rank ++){
                card[i].set(suite,rank);
                i++;
            }
        }
        tong= 52;
    }
    void print(){
        for(int i=0;i<52;i++){
            cout << card[i].print();
        }
    }
    CDplayingCard drawRandom(){
        srand(time(NULL));
        int i = rand()%tong;
        CDPlayingCard card= cards[i];
        for (int ii=i;ii<count-1;ii++){
            card[ii]=cards[ii+1];
        }
        count --;
        return card;
    }
};
int main(){
    CdPlayingCard c1(2,11);
    c1.print();
    CdPlayingCard c2(3,1);
    c2.print();
    CDPlayingDesk c3;
    c3.print();
}
